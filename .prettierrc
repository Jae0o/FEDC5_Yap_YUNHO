{
  "endOfLine": "lf",
  "printWidth": 80,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": false,
  "singleAttributePerLine": true,
  "jsxSingleQuote": false,
  "trailingComma": "all",
  "bracketSameLine": false,
  "jsxBracketSameLine": false,
  "arrowParens": "always",

  "plugins": ["@trivago/prettier-plugin-sort-imports"],

  "importOrder": [
    ".Styles",
    ".css$",

    "^react",

    "^@",
    "^[../]",
    "^[./]",
    "<THIRD_PARTY_MODULES>"
  ],

  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
